<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CookieExample</servlet-name>
        <servlet-class>CookieExample</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Ex4Session</servlet-name>
        <servlet-class>Ex4Session</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExtraInfo</servlet-name>
        <servlet-class>ExtraInfo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExtraCheckInfo</servlet-name>
        <servlet-class>ExtraCheckInfo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExtraLogout</servlet-name>
        <servlet-class>ExtraLogout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TestIndexServlet</servlet-name>
        <servlet-class>TestIndexServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CookieExample</servlet-name>
        <url-pattern>/CookieExample</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Ex3Cookies</servlet-name>
        <servlet-class>Ex3Cookies</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Ex3Cookies</servlet-name>
        <url-pattern>/Ex3Cookies</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Ex4Session</servlet-name>
        <url-pattern>/Ex4Session</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExtraInfo</servlet-name>
        <url-pattern>/ExtraInfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExtraCheckInfo</servlet-name>
        <url-pattern>/ExtraCheckInfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExtraLogout</servlet-name>
        <url-pattern>/ExtraLogout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TestIndexServlet</servlet-name>
        <url-pattern>/TestIndexServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
